{
  "manifest_version": 3,
  "name": "Learning Workflow Extension",
  "version": "1.0.0",
  "description": "Automates learning workflow from Kindle highlights to NotebookLM flashcards",
  "permissions": [
    "activeTab",
    "storage",
    "clipboardWrite",
    "clipboardRead",
    "sidePanel"
  ],
  "host_permissions": [
    "https://api.notion.com/*",
    "https://notebooklm.google.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "side_panel": {
    "default_path": "popup.html"
  },
  "action": {
    "default_title": "Learning Workflow"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["notebooklm.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
